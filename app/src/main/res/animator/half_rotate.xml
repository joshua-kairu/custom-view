<!-- animation of a 180 degree rotation. -->

<objectAnimator

    xmlns:android="http://schemas.android.com/apk/res/android"

    android:duration="@android:integer/config_shortAnimTime"

    android:propertyName="rotation"

    android:valueFrom="0"

    android:valueTo="180"

    />